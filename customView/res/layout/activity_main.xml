<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="10dp"
    tools:context="com.xinwa.android_hero.MainActivity" >

     <com.xinwa.android_hero.MyView
        android:id="@+id/myView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
         />
    <com.xinwa.android_hero.MyTextView
        android:layout_marginTop="10dp"
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="hello_world"
        android:padding="10dip"
        android:gravity="center"
        android:layout_marginBottom="10dp"
      />
    <include 
        layout="@layout/top_bar"
        android:id="@+id/topBar"
       /> 
    <com.xinwa.android_hero.SweepView
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:id="@+id/sweepView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        custom:circleWidth="200dp"
        custom:circleBackground="@color/blue"
        custom:circleTextColor="@color/yellow"/>
</LinearLayout>
